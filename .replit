modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd banking_system && python manage.py migrate && python manage.py runserver 0.0.0.0:5000"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "cd banking_system && python manage.py migrate && python manage.py runserver 0.0.0.0:5000"]

[[ports]]
localPort = 5000
externalPort = 80
